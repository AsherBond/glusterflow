volume examplevolume-posix
    type storage/posix
    option volume-id ecfd1b7d-ac5b-4ffe-ad6a-498019915e86
    option directory /export/brick1/glusterfs
end-volume

volume examplevolume-access-control
    type features/access-control
    subvolumes examplevolume-posix
end-volume

volume examplevolume-locks
    type features/locks
    subvolumes examplevolume-access-control
end-volume

volume examplevolume-io-threads
    type performance/io-threads
    subvolumes examplevolume-locks
end-volume

volume examplevolume-glusterflowclient
    type features/glupy
    option module-name glusterflowclient
    subvolumes examplevolume-io-threads
end-volume

volume examplevolume-index
    type features/index
    option index-base /export/brick1/glusterfs/.glusterfs/indices
    subvolumes examplevolume-glusterflowclient
end-volume

volume examplevolume-marker
    type features/marker
    option quota off
    option xtime off
    option timestamp-file /var/lib/glusterd/vols/examplevolume/marker.tstamp
    option volume-uuid ecfd1b7d-ac5b-4ffe-ad6a-498019915e86
    subvolumes examplevolume-index
end-volume

volume /export/brick1/glusterfs
    type debug/io-stats
    option count-fop-hits off
    option latency-measurement off
    subvolumes examplevolume-marker
end-volume

volume examplevolume-server
    type protocol/server
    option auth.addr./export/brick1/glusterfs.allow *
    option auth.login.5b9156e9-54f0-4a7d-a153-52b85f82cff4.password f34025c9-d661-41a7-bbca-5b08c12715fb
    option auth.login./export/brick1/glusterfs.allow 5b9156e9-54f0-4a7d-a153-52b85f82cff4
    option transport-type tcp
    subvolumes /export/brick1/glusterfs
end-volume
