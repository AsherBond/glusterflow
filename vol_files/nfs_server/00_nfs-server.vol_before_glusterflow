volume examplevolume-client-0
    type protocol/client
    option password f34025c9-d661-41a7-bbca-5b08c12715fb
    option username 5b9156e9-54f0-4a7d-a153-52b85f82cff4
    option transport-type tcp
    option remote-subvolume /export/brick1/glusterfs
    option remote-host examplehost
end-volume

volume examplevolume-dht
    type cluster/distribute
    subvolumes examplevolume-client-0
end-volume

volume examplevolume-write-behind
    type performance/write-behind
    subvolumes examplevolume-dht
end-volume

volume examplevolume
    type debug/io-stats
    option count-fop-hits off
    option latency-measurement off
    subvolumes examplevolume-write-behind
end-volume

volume nfs-server
    type nfs/server
    option nfs3.examplevolume.volume-id ecfd1b7d-ac5b-4ffe-ad6a-498019915e86
    option rpc-auth.addr.examplevolume.allow *
    option nfs.nlm on
    option nfs.dynamic-volumes on
    subvolumes examplevolume
end-volume
